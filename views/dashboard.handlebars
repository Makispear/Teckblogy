<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
        <div class="content">
            <div class="form-div">
                <label for="title">Title</label>
                <textarea class="input-sm" type="text" id="title" name="title"></textarea>
            </div>
            <div class="form-div">
                <label for="post-body">Content</label>
                <textarea name="post-body" id="post-body"></textarea>
            </div>
            <div>
                <button type="submit" class="btn">Create</button>
            </div>
        </div>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2 class="section-title">Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>