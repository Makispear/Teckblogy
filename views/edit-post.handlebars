
<section>
  <h2>Edit Post</h2>

  <form class="edit-post-form">
        <div class="content">
            <div class="form-div">
                <label for="title">Title</label>
                <textarea class="input-sm" type="text" id="title" name="title">{{post.title}}</textarea>
            </div>
            <div class="form-div">
                <label for="post-body">Content</label>
                <textarea name="post-body" id="post-body">{{post.content}}</textarea>
            </div>
            <div>
                <button type="submit" class="update-btn">Update</button>
            <button type="submit" class="delete-btn">Delete Post</button>
            </div>
        </div>
  </form>


</section>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>


